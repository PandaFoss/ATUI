    elif [[ "${OPTION}" == "Graphics" ]]; then
        #TODO
        echo ""
    elif [[ "${OPTION}" == "Network" ]]; then
        #TODO
        echo ""
    elif [[ "${OPTION}" == "Office" ]]; then
        #TODO
        echo ""
    elif [[ "${OPTION}" == "Science" ]]; then
        #TODO
        echo ""
    elif [[ "${OPTION}" == "Settings" ]]; then
        #TODO
